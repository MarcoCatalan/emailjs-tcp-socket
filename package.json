{
  "name": "emailjs-tcp-socket",
  "version": "2.0.0",
  "main": "dist/socket",
  "description": "This shim brings the W3C Raw Socket API to node.js and Chromium. Its purpose is to enable apps to use the same api in Firefox OS, Chrome OS, and on the server.",
  "repository": {
    "type": "git",
    "url": "git://github.com/emailjs/emailjs-tcp-socket.git"
  },
  "author": "Felix Hammerl",
  "maintainers": [
    {
      "name": "Felix Hammerl",
      "email": "felix.hammerl@gmail.com"
    }
  ],
  "license": "MIT",
  "scripts": {
    "build": "./scripts/build.sh",
    "build-worker": "./scripts/worker.sh",
    "release": "./scripts/release.sh",
    "lint": "npx standard",
    "test": "npm run lint && npm run unit && npm run integration",
    "unit": "npx mocha './src/*-unit.js' --reporter spec --require babel-register --require babel-polyfill testutils.js",
    "integration-ws": "npm run build && npx wdio wdio.conf.js"
  },
  "bugs": {
    "url": "https://github.com/emailjs/emailjs-tcp-socket/issues"
  },
  "homepage": "https://github.com/emailjs/emailjs-tcp-socket",
  "dependencies": {
    "node-forge": "^0.7.1",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "emailjs-tcp-proxy": "^1.0.1",
    "hoodiecrow-imap": "^2.1.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.5",
    "pre-commit": "^1.2.2",
    "sinon": "^4.1.3",
    "standard": "^10.0.3",
    "starttls": "https://github.com/felixhammerl/starttls/tarball/master",
    "wdio-mocha-framework": "^0.5.11",
    "webdriverio": "^4.9.11",
    "webpack": "^3.10.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "expect",
      "sinon",
      "self",
      "Worker",
      "URL",
      "Blob",
      "chrome",
      "Windows",
      "postMessage",
      "io",
      "browser"
    ],
    "ignore": [
      "dist"
    ]
  }
}
